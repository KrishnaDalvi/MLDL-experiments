import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.linear_model import LinearRegression, LogisticRegression
from sklearn.metrics import mean_squared_error, r2_score, confusion_matrix, roc_curve, auc

# --- Train and Evaluate Linear Regression ---
print('--- Train and Evaluate Linear Regression ---')
linear_model = LinearRegression()
linear_model.fit(X_linear_train, y_linear_train)
y_linear_pred = linear_model.predict(X_linear_test)
mse_linear = mean_squared_error(y_linear_test, y_linear_pred)
r2_linear = r2_score(y_linear_test, y_linear_pred)
print('Linear Regression Model Performance:')
print(f'Mean Squared Error (MSE): {mse_linear:.4f}')
print(f'R-squared (R2) Score: {r2_linear:.4f}')

# --- Plot Actual vs. Predicted Values for Linear Regression ---
print('\n--- Plotting Actual vs. Predicted for Linear Regression ---')
plt.figure(figsize=(8, 6))
sns.scatterplot(x=y_linear_test, y=y_linear_pred, alpha=0.6)
plt.plot([y_linear_test.min(), y_linear_test.max()], [y_linear_test.min(), y_linear_test.max()],
         '--r', lw=2, label='Perfect Prediction Line')
plt.xlabel('Actual Number of Genres')
plt.ylabel('Predicted Number of Genres')
plt.title('Linear Regression: Actual vs. Predicted Number of Genres')
plt.grid(True)
plt.legend()
plt.show()

# --- Train and Evaluate Logistic Regression ---
print('\n--- Train and Evaluate Logistic Regression ---')
logistic_model = LogisticRegression(solver='liblinear', max_iter=1000, random_state=42)
logistic_model.fit(X_logistic_train, y_logistic_train)
y_logistic_pred = logistic_model.predict(X_logistic_test)
cm_logistic = confusion_matrix(y_logistic_test, y_logistic_pred)
print('Logistic Regression Confusion Matrix:')
print(cm_logistic)

# --- Plot Confusion Matrix for Logistic Regression ---
print('\n--- Plotting Confusion Matrix for Logistic Regression ---')
plt.figure(figsize=(8, 6))
sns.heatmap(cm_logistic, annot=True, fmt='d', cmap='Blues', cbar=False,
            xticklabels=['Not Comedy', 'Comedy'], yticklabels=['Not Comedy', 'Comedy'])
plt.xlabel('Predicted Label')
plt.ylabel('True Label')
plt.title('Confusion Matrix for Logistic Regression')
plt.show()

# --- Plot ROC Curve for Logistic Regression ---
print('\n--- Plotting ROC Curve for Logistic Regression ---')
y_logistic_proba = logistic_model.predict_proba(X_logistic_test)[:, 1]
fpr, tpr, thresholds = roc_curve(y_logistic_test, y_logistic_proba)
roc_auc = auc(fpr, tpr)
plt.figure(figsize=(8, 6))
plt.plot(fpr, tpr, color='darkorange', lw=2, label=f'ROC curve (area = {roc_auc:.2f})')
plt.plot([0, 1], [0, 1], color='navy', lw=2, linestyle='--', label='Random Classifier')
plt.xlim([0.0, 1.0])
plt.ylim([0.0, 1.05])
plt.xlabel('False Positive Rate')
plt.ylabel('True Positive Rate')
plt.title('Receiver Operating Characteristic (ROC) Curve for Logistic Regression')
plt.legend(loc='lower right')
plt.grid(True)
plt.show()
